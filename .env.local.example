# Supabase Configuration
# Copy this file to .env.local and add your actual keys

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://api.dinkhousepb.com

# Your Supabase anonymous key (public key)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Email configuration for production
CONTACT_EMAIL=contact@dinkhousepb.com
FROM_EMAIL=noreply@dinkhousepb.com

# Optional: MailPit configuration for local email testing
MAILPIT_HOST=localhost
MAILPIT_SMTP_PORT=1025

# Google reCAPTCHA v2 Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here